<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.flipkart.logistics.models.Merchant" table="merchant">
        <meta attribute="class-description">
            This class contains the employee detail.
        </meta>
        <id name="id" type="long" column="id">
            <generator class="native"/>
        </id>
        <property name="name" column="name" type="string"/>
        <property name="phone" column="phone" type="string"/>
        <property name="email" column="email" type="string"/>
        <property name="address1" column="address1" type="string"/>
        <property name="address2" column="address2" type="string"/>
        <property name="city" column="city" type="string"/>
        <property name="state" column="state" type="string"/>
        <property name="country" column="country" type="string"/>
        <property name="pinCode" column="pincode" type="string"/>
        <property name="create_datetime" column="create_datetime" type="string"/>
        <property name="update_datetime" column="update_datetime" type="string"/>

        <set name="merchantCategoryMappingSet" cascade="all">
            <key column="merchant_id"></key>
            <one-to-many class="com.flipkart.logistics.models.MerchantCategoryMapping"/>
        </set>
        <!--
       <set name="merchant_service_mappingList" cascade="all">
            <key column="merchant_id"></key>
            <one-to-many class="com.flipkart.logistics.models.Merchant_Service_Mapping"/>
        </set>
        <set name="merchant_document_mappingList" cascade="all">
            <key column="merchant_id"></key>
            <one-to-many class="com.flipkart.logistics.models.Merchant_Document_Mapping"/>
        </set>
        -->
    </class>
</hibernate-mapping>